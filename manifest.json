{
  "manifest_version": 2,

  "name": "Time Box Extension",
  "description": "This extension adds the feature of time boxing to Git-Hub",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["*://*.github.com/*/*"],
    "js": ["jquery-1.11.3.js","timebox.js"],
    "css": ["timebox.css"]
  }],

  "background": {
    "scripts" : ["background.js"]
  }

  "permissions": [
   "activeTab",
   "storage",
   "*://*.github.com/*/*"
   ]
}
