{
  "manifest_version": 2,

  "name": "Time Box",
  "description": "This extension allows you to time-box your work",
  "version": "1.0",

  "background": {
    "scripts" : ["jquery-1.11.3.js","background.js"]
  },

  "browser_action": {
   "default_icon": "icons/icon.png",
   "default_popup": "popup.html"
  },

  "icons": {
  "16": "icons/16PX.png",
  "48": "icons/48PX.png",
  "128": "icons/128PX.png"
  },

  "permissions": [
   "activeTab",
   "storage",
   "notifications"
   ]
}
